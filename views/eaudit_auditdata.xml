<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- tree view -->
        <record id="view_eaudit_auditdata_tree" model="ir.ui.view">
            <field name="name">eaudit_auditdata_tree</field>
            <field name="model">eaudit.auditdata</field>
            <field name="type">tree</field>
            <field name="priority" eval="8" />
            <field name="arch" type="xml">
                <tree string="Data Audit">
                    <field name="name" />
                    <field name="tahun" />
                    <field name="tgl" />
                    <field name="temuan" />
                    <field name="penyebab" />
                    <field name="rekomendasi" />
                    <field name="jt_administratif" />
                    <field name="jt_material" />
                    <field name="tl_pic" />
                    <field name="tl_desk" />
                    <field name="tl_bukti_file" />
                    <field name="tl_bukti_name" />
                    <field name="status" />
                    <field name="saldo" />
                    <field name="verifikasi" />
                </tree>
            </field>
        </record>
        <!-- form view -->
        <record id="view_eaudit_auditdata_form" model="ir.ui.view">
            <field name="name">eaudit_auditdata_form</field>
            <field name="model">eaudit.auditdata</field>
            <field name="type">form</field> 
            <field name="priority" eval="8" />
            <field name="arch" type="xml">
                <form string="Data Audit">
                    <sheet>
                        <group>
                            <group string="Data Utama" col="4" colspan="4">
                                <field name="name" string='Nomor LHP' />
                                <field name="tahun" />
                                <field name="tgl" />
                                <field name="temuan" />
                                <field name="penyebab" />
                                <field name="rekomendasi" />
                            </group>
                            <group string="Proses Audit" col="4" colspan="4">
                                <field name="jt_administratif" />
                                <field name="jt_material" />
                                <field name="tl_pic" />
                                <field name="tl_desk" />
                                <field name="tl_bukti_file" />
                                <field name="tl_bukti_name" />
                            </group>
                            <group string="Status" col="4" colspan="4">
                                <field name="status" />
                                <field name="saldo" />
                                <field name="verifikasi" />
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        <!-- search -->
        <record id="view_eaudit_auditdata_search" model="ir.ui.view">
            <field name="name">eaudit_auditdata</field>
            <field name="model">eaudit.auditdata</field>
            <field name="arch" type="xml">
                <search string="Data Audit">
                    <filter name="filter_by_name" string="Nama" domain="[('name','=','')]" />
                    <field name="name" select="True" />
                    <group string="Group By..">
                    </group>
                </search>
            </field>
        </record>
        <!-- kanban, to show image, please add image_small in the model -->
        <record id="view_eaudit_auditdata_kanban" model="ir.ui.view">
            <field name="name">eaudit_auditdata</field>
            <field name="model">eaudit.auditdata</field>
            <field name="arch" type="xml">
                <kanban version="7.0">
                    <field name="id" />
                    <field name="name" />
                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_global_clock o_kanban_record_has_image_fill">
                                <div class="oe_kanban_details">
                                    <h4>
                                        <a type="open"><field name="name" /></a>
                                    </h4>
                                    <ul>
                                        <a type="open"><field name="name" /></a>
                                    </ul>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>
        <!-- calendar if a date field exists -->
        <!-- graph -->
        <record id="view_eaudit_auditdata_grap" model="ir.ui.view">
            <field name="name">eaudit_auditdata</field>
            <field name="model">eaudit.auditdata</field>
            <field name="arch" type="xml">
                <graph string="Hobi" type="bar">
                </graph>
            </field>
        </record>
        <!-- action window -->
        <record id="action_eaudit_auditdata" model="ir.actions.act_window">
            <field name="name">eAudit</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">eaudit.auditdata</field>
            <field name="view_mode">kanban,tree,form</field>
            <field name="context">{"Search_default_fieldname":1}</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                Click to add a new Program Audit
                </p>
                <p>
                Click the Create button to add a new Program Audit
                </p>
            </field>
        </record>

        <menuitem id="menu_eaudit_auditdata" name="Data Audit" parent="eaudit_data" action="action_eaudit_auditdata" sequence="20" />
    </data>
</odoo>
